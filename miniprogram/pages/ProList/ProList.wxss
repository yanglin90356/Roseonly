page {
  width: 100%;
  /* overflow: hidden; */
  box-sizing: border-box;
}

.products {
  width: 100%;
  background-color: #f5f5f5;
}

.products .nav {
  font-size: 24rpx;
  color: #696969; 
  display: flex;
  padding: 15rpx 0;
  background-color: #ffffff;
  border-top: 1px solid #f5f5f5;
}

.products .nav view {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.products .nav .active {
  color: #c71f2c;
}

/* 商品 */
.goods {
  box-sizing: border-box;
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 20rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.goods .goods-container {
  background-color: #fff;
  width: 49%;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  color: #444444;
  box-sizing: border-box;
  height: 500rpx;
  position: relative;
}

.goods .goods-container .goods-img {
  height: 350rpx;
}

.goods .goods-container .goods-img image {
  height: 100%;
}

.goods-foot {
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.goods-foot .goods-price {
  color: #c71f2c;
}

.goods-cart {
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  border: 1px solid #c71f2c;
  position: absolute;
  right:40rpx;
  padding: 6rpx;
  bottom: 0;
}

.goods-cart image {
  width: 100%;
  height: 100%;
}