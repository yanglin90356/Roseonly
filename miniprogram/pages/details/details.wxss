page {
  font-family: "Microsoft YaHei";
  padding-bottom: 90rpx;
}

.details {
  background-color: #f5f5f5;
}

.details swiper {
  width: 750rpx;
  height: 740rpx;
}

.Blurb {
  padding: 20rpx 30rpx 0 30rpx;
  background-color: #ffffff;
}

.deta-price {
  color: red;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.deta-ShareAndTitle {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

.deta-ShareAndTitle .title {
  flex: 5;
  font-size: 28rpx;
  font-weight: bold;
}

.deta-ShareAndTitle .share {
  width: 35rpx;
  height: 35rpx;
}

.share image {
  width: 100%;
  height: 100%;
}

/* 商家承诺 */
.TheyPromise {
  margin-top: 20rpx;
}

.TheyPromise .first {
  padding: 0 30rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  line-height: 80rpx;
  background-color: #ffffff;
  font-size: 24rpx;
  color: #696969;
}

.TheyPromise .first .sjrz {
  width: 30rpx;
  height: 30rpx;
}

.TheyPromise .first .sjrz image {
  width: 100%;
  height: 100%;
}

.TheyPromise .carriage,
.TheyPromise .service {
  padding: 0 30rpx 0 30rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  background-color: #ffffff;
}

.TheyPromise .carriage text:first-child,
.TheyPromise .service .service-item text:first-child {
  color: #696969;
}

.TheyPromise .carriage text:last-child,
.TheyPromise .service .service-item text:last-child {
  margin-left: 30rpx;
}

.TheyPromise .service .service-img {
  width: 30rpx;
  height: 30rpx;
}

.TheyPromise .service .service-img image {
  width: 100%;
  height: 100%;
}

.TheyPromise .service {
  display: flex;
  justify-content: space-between;
}

/* 详情图 */
.DetailsFigure {
  margin-bottom: 110rpx;
  padding: 0 30rpx 0 30rpx;
  background: #ffffff;
}

.DetailsFigure view:first-child {
  color: #444444;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

/* 加入购物车 */
.btm_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
}

.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 18rpx;
  position: relative;
  color: #696969;
}

.btm_tool .tool_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.btm_tool .btn_cart,
.btm_tool .btn_buy {
  flex: 2;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  border-radius: 50rpx;
  margin-top: 10rpx;
}

.btm_tool .btn_cart {
  background: #555555;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.btm_tool .btn_buy {
  flex: 2;
  background: red;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.left-icons {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.left-icons image {
  width: 100%;
  height: 100%;
}